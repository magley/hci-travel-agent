<Window x:Class="YouTravel.Agent.ArrangementReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTravel.Agent"
        mc:Ignorable="d"
		Style="{StaticResource WinDark}"
		Loaded="Window_Loaded"
        Title="ArrangementReport" Height="450" Width="800">
	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="15*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Label
			Grid.Row="0"
			FontSize="24"
			Content="{Binding arrangement.Description}"/>

		<DataGrid
			Grid.Row="1"
			Margin="0 16 0 16"
			x:Name="tbReservations" 
			AutoGenerateColumns="True" 
			ItemsSource="{Binding}">
		</DataGrid>

		<StackPanel
			Grid.Row="2"
			Orientation="Horizontal"
			HorizontalAlignment="Right">

			<Button>Previous Page</Button>
			<Label Grid.Row="2">Page 1/10</Label>
			<Button>Next Page</Button>
		</StackPanel>
		
	</Grid>

</Window>
