<Window x:Class="YouTravel.Agent.AgentArrangements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTravel.Agent"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
        Title="AgentArrangements" Width="960" Height="540">
    <Grid>
		<Grid.ColumnDefinitions>
			
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			
		</Grid.RowDefinitions>

		<ListView
			x:Name="arrangementsList"
			ItemsSource="{Binding}">
			<ListView.View>
				<GridView>
					<GridViewColumn
						DisplayMemberBinding="{Binding Path=Description}"
						Header="Description"/>

					<GridViewColumn>
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Button Click="ViewArrangement_Click">View</Button>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
    </Grid>
</Window>
