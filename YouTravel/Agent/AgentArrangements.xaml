<Window x:Class="YouTravel.Agent.AgentArrangements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTravel.Agent"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
		Style="{StaticResource WinDark}"
        Title="AgentArrangements" Width="960" Height="540">

	<Window.Resources>
		<BitmapImage x:Key="IcoAdd" UriSource="../Res/IcoAdd.png"/>
		<BitmapImage x:Key="IcoEdit" UriSource="../Res/IcoPencil.png"/>
		<BitmapImage x:Key="IcoStats" UriSource="../Res/IcoChart.png"/>
	</Window.Resources>
	
	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="7*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="9*" />
		</Grid.RowDefinitions>

		<StackPanel
			Grid.Row="0"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Right"
			Orientation="Horizontal"
			VerticalAlignment="Center"
			Margin="10">

			<Button>
				<DockPanel HorizontalAlignment="Stretch">
					<Image Source="{StaticResource IcoAdd}" Height="20" Margin="5 0 5 0"/>
					<Label Content="New"/>
				</DockPanel>
			</Button>
		</StackPanel>

		<ListView
			Grid.Row="1"
			Grid.Column="1"
			x:Name="arrangementsList"
			ItemsSource="{Binding}"
			Margin="10 10 10 10">

			<ListView.View>
				<GridView>
					<!-- Unpublished changes indicator.  -->
					<GridViewColumn>
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Image Source="../Res/IcoBlueBullet.png" Height="18"/>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					
					<!-- Description (name) -->
					<GridViewColumn
						DisplayMemberBinding="{Binding Path=Description}"
						Header="Description"/>

					<!-- Edit button -->
					<GridViewColumn>
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Button Click="ViewArrangement_Click">
									<DockPanel HorizontalAlignment="Stretch">
										<Image Source="{StaticResource IcoEdit}" Height="20" Margin="5 0 5 0"/>
										<Label Content="Edit"/>
									</DockPanel>
								</Button>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					
					<!-- Stats button -->
					<GridViewColumn>
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Button Click="ArrangementReport_Click">
									<DockPanel HorizontalAlignment="Stretch">
										<Image Source="{StaticResource IcoStats}" Height="20" Margin="5 0 5 0"/>
										<Label Content="Report"/>
									</DockPanel>
								</Button>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
    </Grid>
</Window>
